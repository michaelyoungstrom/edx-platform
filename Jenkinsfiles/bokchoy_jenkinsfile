pipeline {
    agent { label 'master' }
    stages {
        stage('Parallel Stage') {
            parallel {
                stage('Branch A') {
                    agent {
                        label 'master'
                    }
                    steps {
                        echo "On Branch A"
                    }
                }
                stage('Branch B') {
                    agent {
                        label 'master'
                    }
                    steps {
                        echo "On Branch B"
                    }
                }
            }
        }
    }
}