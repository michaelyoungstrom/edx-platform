pipeline {
    agent { label 'master' }
    stages {
        stage('Parallel Stage') {
            steps {
                parallel {
                    "stream 1" : {
                        agent {
                            label 'master'
                        }
                        steps {
                            echo "On Branch A"
                        }
                    }
                    "stream 2" {
                        agent {
                            label 'master'
                        }
                        steps {
                            echo "On Branch B"
                        }
                    }
                }
            }
        }
    }
}